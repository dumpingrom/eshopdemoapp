<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_container"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="50dp"
    android:background="@color/white"
    tools:context=".MainActivity">

    <!-- HOME HEADER -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="30dp"
                android:layout_height="5dp"
                android:background="@color/black">
                <!--DUMMY-->
                </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="30dp"
                android:layout_height="5dp"
                android:background="@color/black"
                android:layout_marginTop="3dp">
                <!--DUMMY-->
                </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="30dp"
                android:layout_height="5dp"
                android:background="@color/black"
                android:layout_marginTop="3dp">
                <!--DUMMY-->
                </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/shop"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            />
    </RelativeLayout>

    <ScrollView
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="@color/background_floating_material_dark">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/home_hats"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:background="@color/color_hats"
                android:gravity="center">

                <ImageView
                    android:id="@+id/home_hats_img"
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/home_icono_hats"
                    android:scaleType="fitCenter"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true"
                    />

                <TextView
                    android:id="@+id/home_hats_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/hats"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:singleLine="false"
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="45dp"
                    />

                <TextView
                    android:id="@+id/home_hats_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/one"
                    android:layout_margin="35dp"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    />

                <LinearLayout
                    android:layout_width="25dp"
                    android:layout_height="1dp"
                    android:background="@color/white"
                    android:layout_below="@+id/home_hats_num"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="-32dp">
                    <!--DUMMY LAYOUT-->
                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/home_shoes"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:background="@color/color_shoes"
                android:gravity="center">

                <ImageView
                    android:id="@+id/home_shoes_img"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/home_icono_shoes"
                    android:scaleType="fitCenter"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true"
                    />

                <TextView
                    android:id="@+id/home_shoes_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/shoes"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:singleLine="false"
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="45sp"
                    />

                <TextView
                    android:id="@+id/home_shoes_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/two"
                    android:layout_margin="35dp"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    />

                <LinearLayout
                    android:layout_width="25dp"
                    android:layout_height="1dp"
                    android:background="@color/white"
                    android:layout_below="@+id/home_shoes_num"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="-32dp">
                    <!--DUMMY LAYOUT-->
                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/home_glasses"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:background="@color/color_glasses"
                android:gravity="center">

                <ImageView
                    android:id="@+id/home_glasses_img"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/home_icono_glasses"
                    android:scaleType="fitCenter"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true"
                    />

                <TextView
                    android:id="@+id/home_glasses_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/glasses"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:singleLine="false"
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="45sp"
                    />

                <TextView
                    android:id="@+id/home_glasses_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/three"
                    android:layout_margin="35dp"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    />

                <LinearLayout
                    android:layout_width="25dp"
                    android:layout_height="1dp"
                    android:background="@color/white"
                    android:layout_below="@+id/home_glasses_num"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="-32dp">
                    <!--DUMMY LAYOUT-->
                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/home_bags"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:background="@color/color_bags"
                android:gravity="center">

                <ImageView
                    android:id="@+id/home_bags_img"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/home_icono_bags"
                    android:scaleType="fitCenter"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true"
                    />

                <TextView
                    android:id="@+id/home_bags_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/bags"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:singleLine="false"
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="45sp"
                    />

                <TextView
                    android:id="@+id/home_bags_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/four"
                    android:layout_margin="35dp"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    />

                <LinearLayout
                    android:layout_width="25dp"
                    android:layout_height="1dp"
                    android:background="@color/white"
                    android:layout_below="@+id/home_bags_num"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="-32dp">
                    <!--DUMMY LAYOUT-->
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout><!-- From: file:/home/videodesk/AndroidStudioProjects/EshopDemoApp/app/src/main/res/layout/activity_main.xml -->