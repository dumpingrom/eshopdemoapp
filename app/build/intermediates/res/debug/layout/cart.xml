<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/cart"
    tools:context=".Cart">

    <!--HEADER CART-->
    <LinearLayout
        android:id="@+id/header_cart"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_hats"
        android:layout_alignParentTop="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="30dp"
                    android:layout_height="5dp"
                    android:background="@color/black">
                    <!--DUMMY-->
                    </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="30dp"
                    android:layout_height="5dp"
                    android:background="@color/black"
                    android:layout_marginTop="3dp">
                    <!--DUMMY-->
                    </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="30dp"
                    android:layout_height="5dp"
                    android:background="@color/black"
                    android:layout_marginTop="3dp">
                    <!--DUMMY-->
                    </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/shop"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                />
        </RelativeLayout>
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/header_cart_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/one"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:layout_marginStart="30dp"
                android:layout_centerInParent="true"
                android:layout_alignParentStart="true"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/header_cart_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cart"
                android:textColor="@color/white"
                android:layout_marginStart="20dp"
                android:textSize="30sp"
                android:layout_centerInParent="false"
                android:layout_toEndOf="@+id/header_cart_num"
                />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="22dp"
                android:layout_height="1dp"
                android:background="@color/white"
                android:layout_below="@+id/header_cart_num"
                android:layout_marginStart="28dp"
                android:visibility="gone">
                <!--DUMMY LAYOUT-->
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/cart_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_cart">

        <LinearLayout
            android:id="@+id/cart_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--Content generated from Cart.java-->
            </LinearLayout>

        </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="00dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/cart_scroll"
        android:gravity="bottom">
        <Button
            android:id="@+id/tmp_button_checkout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/goToCheckout"
            android:padding="20dp"
            android:background="@color/black"
            android:textColor="@color/white"
            android:textSize="20sp"
            />
        </RelativeLayout>
</RelativeLayout><!-- From: file:/home/videodesk/AndroidStudioProjects/EshopDemoApp/app/src/main/res/layout/cart.xml -->