                    android:background="@color/black"></LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="30dp"
                    android:layout_height="5dp"
                    android:background="@color/black"
                    android:layout_marginTop="3dp"></LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="30dp"
                    android:layout_height="5dp"
                    android:background="@color/black"
                    android:layout_marginTop="3dp"></LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/shop"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                />
        </RelativeLayout>
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/header_hats_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/one"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:layout_marginStart="30dp"
                android:layout_centerInParent="true"
                android:layout_alignParentStart="true"
                />

            <TextView
                android:id="@+id/header_hats_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hats"
                android:textColor="@color/white"
                android:layout_marginStart="6dp"
                android:textSize="30sp"
                android:layout_centerInParent="true"
                android:layout_toEndOf="@+id/header_hats_num"
                />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="22dp"
                android:layout_height="1dp"
                android:background="@color/white"
                android:layout_below="@+id/header_hats_num"
                android:layout_marginStart="28dp">
                <!--DUMMY LAYOUT-->
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

